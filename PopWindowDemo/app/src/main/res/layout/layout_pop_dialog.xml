<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="选择注册类型"
        android:textSize="18sp"
        android:padding="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#80888F"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/pop_dialog_rl_hiddns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HiDDNS"
            android:textSize="18sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/pop_dialog_iv_hiddns"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_rabiobox_btn"/>

    </RelativeLayout>

    <View style="@style/HorizontalLine"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"/>

    <RelativeLayout
        android:id="@+id/pop_dialog_rl_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP/Domain"
            android:textSize="18sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/pop_dialog_iv_domain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_rabiobox_btn"/>

    </RelativeLayout>

    <View style="@style/HorizontalLine"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"/>

    <RelativeLayout
        android:id="@+id/pop_dialog_rl_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Server"
            android:textSize="18sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/pop_dialog_iv_server"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_rabiobox_btn"/>

    </RelativeLayout>

    <View style="@style/HorizontalLine"/>

    <TextView
        android:id="@+id/pop_dialog_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="取消"
        android:textSize="18sp"
        android:padding="12dp"/>

</LinearLayout>